{
  "name": "mygrok",
  "version": "1.0.0",
  "description": "AI Chatbot website with Grok-like interface",
  "private": true,
  "scripts": {
    "install:all": "./install-and-run.sh",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "clean": "rm -rf frontend/node_modules backend/node_modules frontend/dist",
    "setup": "npm run install:all"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "ai",
    "chatbot",
    "grok",
    "react",
    "nodejs",
    "openai"
  ],
  "author": "MyGrok Team",
  "license": "MIT",
  "workspaces": [
    "frontend",
    "backend"
  ]
}
